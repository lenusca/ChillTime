<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#EE7168</item>
        <item name="colorPrimaryDark">#EE7168</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="NavigationDrawerStyle" >

        <item name="android:textSize">18sp</item>
        <item name="android:itemPadding">50dp</item>
        <!-- item size in menu-->
        <item name="android:listPreferredItemHeightSmall">40dp</item>
        <item name="listPreferredItemHeightSmall">40dp</item>

        <!-- item padding left in menu-->
        <item name="android:listPreferredItemPaddingLeft">40dp</item>
        <item name="listPreferredItemPaddingLeft">40dp</item>

        <!-- item padding right in menu-->
        <item name="android:listPreferredItemPaddingRight">40dp</item>
        <item name="listPreferredItemPaddingRight">40dp</item>
    </style>
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>


</resources>
